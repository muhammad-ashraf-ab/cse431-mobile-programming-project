<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CSE431MobileProgrammingProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tart_orange</item>
        <item name="colorPrimaryVariant">@color/cultured</item>
        <item name="colorOnPrimary">@color/cultured</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/platinum</item>
        <item name="colorSecondaryVariant">@color/cultured</item>
        <item name="colorOnSecondary">@color/jet</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circle_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/yellow_orange</item>
        <item name="android:secondaryProgressTint">@color/transparent</item>
    </style>

    <style name="Label">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/translucent_light</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:textCursorDrawable">?attr/colorPrimary</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="LoginScreenButtons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="PaymentButtons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconTintMode">src_atop</item>
        <item name="iconGravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="NoResultsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center</item>
        <item name="iconGravity">top</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="iconSize">200dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

</resources>